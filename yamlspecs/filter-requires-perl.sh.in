#! /bin/bash
#
# rewrite perl rpm requirements 
# rename according to the version

/usr/lib/rpm/find-requires $* | sed  \
    -e '/perl(s)/d' \
    -e '/perl(\\s)/d' \
    -e '/perl(unicore::Name)/d' \
    -e '/perl(VMS::Stdio)/d' \
    -e '/perl(VMS::Filespec)/d' \
    -e '/perl(Mac::InternetConfig)/d' \
    -e '/perl(Mac::BuildTools)/d' \
    -e 's/perl(/perl_@VERSION@(/'
